<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import java.lang.String?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.CalendarController">
    <top>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <Button text="Previous" onAction="#handlePrevious"/>
            <ComboBox fx:id="viewSelector">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Month"/>
                        <String fx:value="Week"/>
                        <String fx:value="Day"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <Button text="Next" onAction="#handleNext"/>
        </HBox>
    </top>
    <center>
        <BorderPane fx:id="calendarView" style="-fx-padding: 10;"/>
    </center>
</BorderPane>
